CREATE USER IF NOT EXISTS 'root'@'%' IDENTIFIED BY '<%= p('cf_mysql.mysql.admin_password') %>';
GRANT ALL PRIVILEGES ON *.* TO 'root'@'%' WITH GRANT OPTION;
UPDATE mysql.user SET Password=PASSWORD('<%= p('cf_mysql.mysql.admin_password') %>') WHERE User='root';
DELETE FROM mysql.user WHERE User='';
FLUSH PRIVILEGES;

CREATE USER IF NOT EXISTS 'slave'@'%' IDENTIFIED BY 'password';
GRANT REPLICATION SLAVE ON *.* TO 'slave'@'%';
FLUSH PRIVILEGES;
