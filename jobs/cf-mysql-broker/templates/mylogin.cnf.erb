<%
  mysql_port = nil
  if_p('cf_mysql.mysql.port') do |port|
    mysql_port = port
  end.else do
    mysql_port = link('mysql').p('cf_mysql.mysql.port')
  end
%>

[client]
user="<%= p('cf_mysql.mysql.admin_username') %>"
password="<%= p('cf_mysql.mysql.admin_password') %>"
host="<%= p('cf_mysql.host') %>"
port="<%= mysql_port %>"
